<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="objects">

    <class name="Department" table="department">
        <id name="id" column="id"><generator class="increment"/></id>
        <property name="headId" unique="true" column="head_id" insert="false" update="false"/>
        <property name="name" not-null="true" />
        <property name="description" />
        <set name="employees" table="employee" inverse="true" lazy="true" fetch="select">
            <key><column name="department_id" not-null="true" /></key>
            <one-to-many class="objects.Employee" />
        </set>
        <!--Используем head_id как ключ для таблицы Employee, "заменяя" значение на объект-->
        <many-to-one name="employeeHead" class="objects.Employee" not-null="true" cascade="all" unique="true">
            <column name="head_id"/>
        </many-to-one>
    </class>

    <class name="Employee" table="employee">
        <id name="id" column="id"><generator class="increment"/></id>
        <property name="hireDate" type="date" column="hire_date"/>
        <property name="salary" type="int" column="salary"/>
        <property name="name" not-null="true" type="string" />
        <property name="dep_id" column="department_id" insert="false" update="false"/>
        <many-to-one name="department" class="objects.Department" fetch="select">
            <column name="department_id" not-null="true" />
        </many-to-one>
    </class>

</hibernate-mapping>
